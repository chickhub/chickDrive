<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardV_job_desc"
    android:layout_width="200dp"
    android:layout_height="255dp"
    android:orientation="horizontal"
    app:cardCornerRadius="12dp"
    android:background="?android:selectableItemBackground"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_Image1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_dummy_home"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_Quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="700 Broiler Chickens"
            android:gravity="center|left"
            android:textSize="13dp"
            android:padding="5dp"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/nunito_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:weightSum="2">
            <TextView
                android:id="@+id/tv_Days_Age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 days"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_chicken"
                android:gravity="center|left"
                android:textSize="8dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/nunito_bold"/>
            <TextView
                android:id="@+id/tv_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lahore/islamabd"
                android:gravity="center|left"
                android:textSize="10dp"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_new_location"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/nunito_bold"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_WeightMinWeightMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.51kg"
            android:padding="5dp"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/ic_kg"
            android:gravity="center|start"
            android:textSize="13dp"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/nunito_bold"/>


    </LinearLayout>



</android.support.v7.widget.CardView>